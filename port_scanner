import socket
import threading

def scan_port(host, port, timeout=1):
    sock = socket.socket(socket.AF_INET, socket.SOCK_STREAM)
    sock.settimeout(timeout)
    result = sock.connect_ex((host, port))
    sock.close()
    return port, result == 0

def port_scan(host, start_port, end_port):
    open_ports = []
    threads = []
    for port in range(start_port, end_port + 1):
        thread = threading.Thread(target=lambda: open_ports.append(scan_port(host, port)))
        threads.append(thread)
        thread.start()
    for thread in threads:
        thread.join()
    return [port for port, is_open in open_ports if is_open]

if __name__ == "__main__":
    host = "localhost"
    start_port, end_port = 1, 1024
    open_ports = port_scan(host, start_port, end_port)
    print(f"Open ports on {host}: {open_ports}")
